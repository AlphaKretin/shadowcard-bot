{
	"name": "shadowcard-bot",
	"version": "1.0.0",
	"description": "A Discord bot to display Shadowverse Evolve cards from shadowcard.io.",
	"main": "shadowbot.js",
	"scripts": {
		"start": "node shadowbot",
		"build": "tsc",
		"reg": "node command",
		"lint": "eslint shadowbot.ts modules/*.ts --fix"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/AlphaKretin/shadowcard-bot.git"
	},
	"keywords": [
		"discord",
		"shadowverse"
	],
	"author": "AlphaKretin",
	"license": "GPL-3.0-or-later",
	"bugs": {
		"url": "https://github.com/AlphaKretin/shadowcard-bot/issues"
	},
	"homepage": "https://github.com/AlphaKretin/shadowcard-bot#readme",
	"dependencies": {
		"@discordjs/builders": "^0.13.0",
		"@discordjs/rest": "^0.4.1",
		"discord-api-types": "^0.33.0",
		"discord.js": "^13.7.0",
		"fuse.js": "^3.4.6",
		"make-fetch-happen": "^10.1.6"
	},
	"devDependencies": {
		"@types/make-fetch-happen": "^9.0.2",
		"@types/node": "^17.0.36",
		"@types/ws": "^7.4.7",
		"@typescript-eslint/eslint-plugin": "^4.11.1",
		"@typescript-eslint/parser": "^4.11.1",
		"eslint": "^7.17.0",
		"eslint-config-prettier": "^7.1.0",
		"prettier": "^2.2.1",
		"typescript": "^4.7.2"
	},
	"eslintConfig": {
		"root": true,
		"parser": "@typescript-eslint/parser",
		"plugins": [
			"@typescript-eslint"
		],
		"extends": [
			"eslint:recommended",
			"plugin:@typescript-eslint/eslint-recommended",
			"plugin:@typescript-eslint/recommended",
			"prettier",
			"prettier/@typescript-eslint"
		],
		"rules": {
			"@typescript-eslint/explicit-function-return-type": [
				"warn",
				{
					"allowExpressions": true,
					"allowTypedFunctionExpressions": true,
					"allowHigherOrderFunctions": true,
					"allowDirectConstAssertionInArrowFunctions": true,
					"allowConciseArrowFunctionExpressionsStartingWithVoid": true
				}
			],
			"prefer-template": "error"
		}
	},
	"prettier": {
		"printWidth": 120,
		"useTabs": true,
		"semi": true,
		"singleQuote": false,
		"trailingComma": "none",
		"bracketSpacing": true,
		"arrowParens": "avoid"
	}
}
